<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BoutonRougeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/fond_bouton_rouge</item>
    </style>
    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textColor">@color/couleur_texte_noir</item> <!-- Couleur du texte -->
        <item name="android:paddingStart">16dp</item> <!-- Rembourrage à gauche -->
        <item name="android:paddingEnd">16dp</item> <!-- Rembourrage à droite -->
        <item name="android:textSize">19sp</item> <!-- Taille du texte -->
        <item name="android:gravity">center_vertical</item> <!-- Alignement vertical du texte -->
        <item name="android:textAlignment">center</item>
        <item name="android:popupBackground">@color/couleur_arriere_plan</item> <!-- Couleur de fond du dropdown -->
    </style>






</resources>