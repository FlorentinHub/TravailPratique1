<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/couleur_arriere_plan">

    <!-- Image d'en-tête -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/votre_image_header"
        android:scaleType="fitCenter"
        android:layout_gravity="center"/>

    <!-- Titre de l'application -->
    <TextView
        android:id="@+id/tvTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titre_application"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Liste déroulante des restaurants -->
    <Spinner
        android:id="@+id/spinnerRestaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <!-- Texte pour afficher le nombre de places restantes -->
    <TextView
        android:id="@+id/tvPlacesRestantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/places_restantes"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Boutons pour accéder aux autres activités -->
    <Button
        android:id="@+id/btnReserver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_reserver"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnAfficherReservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_afficher_reservations"
        android:layout_marginTop="8dp"/>

</LinearLayout>
