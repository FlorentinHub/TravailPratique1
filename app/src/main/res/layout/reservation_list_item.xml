<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgReservation"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/roundtable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNomPersonne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de la personne"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNbPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de places réservées" />

        <TextView
            android:id="@+id/tvHeureDebutFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure de début et de fin" />
    </LinearLayout>
</LinearLayout>
